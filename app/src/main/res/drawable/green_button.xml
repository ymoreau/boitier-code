<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="oval">
            <solid
                android:color="#24F000" />
            <stroke
                android:width="1dp"
                android:color="#106E00" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="270"
                android:startColor="#24F000"
                android:endColor="#106E00"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#106E00" />
        </shape>
    </item>
</selector>