<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="oval">
            <solid
                android:color="#F22100" />
            <stroke
                android:width="1dp"
                android:color="#991400" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="270"
                android:startColor="#F22100"
                android:endColor="#991400"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#991400" />
        </shape>
    </item>
</selector>