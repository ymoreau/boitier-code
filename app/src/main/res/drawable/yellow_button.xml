<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="oval">
            <solid
                android:color="#E8E01C" />
            <stroke
                android:width="1dp"
                android:color="#918D09" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="270"
                android:startColor="#F2ED63"
                android:endColor="#918D09"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#918D09" />
        </shape>
    </item>
</selector>